<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="index.css" />
  </head>
  <body>
    <h2>This is All chats</h2>
    <form method="get" action="/chats/new">
      <button>newChat</button>
    </form>

    <% for(chat of chats){ %>
    <div id="outer">
      <div id="inner">
        <h3>
          ID:
          <p><%=chat._id%></p>
        </h3>
        <h3>
          From:
          <p><%=chat.from %></p>
        </h3>
        <h3>
          To:
          <p><%=chat.to %></p>
        </h3>
        <h3>
          Message:
          <p><%=chat.msg %></p>
        </h3>
        <h3>Time:<%= chat.date.toString().split(" ")[4]%></h3>
        <h3>date:<%= chat.date.toString().split(" ").slice(0,4).join("-")%></h3>
        <form method="GET" action="/chats/<%=chat._id%>/edit">
          <button id="edit">Edit</button>
        </form>
        <form method="POST" action="/chats/<%=chat._id%>?_method=DELETE">
          <button>Delete</button>
        </form>
<br>
<br>
<br>
          <form action="/chats/apple">
             <input type="text" name="name">
             <button>enter</button>
          </form>

      </div>
    </div>
    <%}%>
  </body>
</html>
